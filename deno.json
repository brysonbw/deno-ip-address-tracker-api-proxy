{
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "imports": {
    "hono": "https://deno.land/x/hono@v4.0.8/mod.ts",
    "hono/middleware": "https://deno.land/x/hono@v4.0.8/middleware.ts",
    "hono/validator": "https://deno.land/x/hono@v4.0.8/validator/index.ts",
    "hono/helper": "https://deno.land/x/hono@v4.0.8/helper.ts",
    "hono/http-exception": "https://deno.land/x/hono@v4.0.8/http-exception.ts",
    "std/": "https://deno.land/std@0.218.2/"
  },
  "tasks": {
    "start": "deno run --allow-net src/index.tsx",
    "dev": "deno fmt && deno run --allow-net --allow-read --allow-env --allow-ffi --watch src/index.tsx",
    "format": "deno fmt"
  }
}